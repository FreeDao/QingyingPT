<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rlSelector"
        android:background="@drawable/bg_border_bottom_grey" />

    <LinearLayout
        android:id="@+id/rlSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/bg_color_light_grey"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btnSmilies1"
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/emoticon1"
            android:background="@color/bg_color_white" />
        
        <View android:layout_height="match_parent" android:layout_width="0.1dp" android:background="@color/border_grey"/>

        <ImageView
            android:id="@+id/btnSmilies2"
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/emoticon2" />
        
		<View android:layout_height="match_parent" android:layout_width="0.1dp" android:background="@color/border_grey"/>

    </LinearLayout>

</RelativeLayout>